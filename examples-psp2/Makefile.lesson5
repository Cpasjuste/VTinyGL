TITLE_ID = TinyGLL05
TARGET   = TinyGLL05
OBJS     = lesson5.o

LIBS = ../lib/libTinyGL.a -lSDL2 -lvita2d -lSceKernel_stub -lpsp2shell -lpthread -lSceDisplay_stub -lSceGxm_stub \
	-lSceSysmodule_stub -lSceCtrl_stub -lScePgf_stub -lSceNetCtl_stub -lSceNet_stub \
	-lSceCommonDialog_stub -lSceAudio_stub -lSceAppMgr_stub -lfreetype -lpng -ljpeg -lz -lm -lc

PREFIX  = arm-vita-eabi
CC      = $(PREFIX)-gcc
CFLAGS  = -Wl,-q -Wall -O3 -I../src -I../include \
			-ftree-vectorize -mword-relocations -fomit-frame-pointer -ffast-math \
			-march=armv7-a -mtune=cortex-a9 -mfpu=neon -mfloat-abi=hard
ASFLAGS = $(CFLAGS)

all: $(TARGET).vpk

%.vpk: eboot.bin
	vita-mksfoex -s TITLE_ID=$(TITLE_ID) "$(TARGET)" param.sfo
	vita-pack-vpk -s param.sfo -b eboot.bin $@

eboot.bin: $(TARGET).velf
	vita-make-fself -s $< $@

%.velf: %.elf
	vita-elf-create $< $@

$(TARGET).elf: $(OBJS)
	$(CC) $(CFLAGS) $^ $(LIBS) -o $@

%.o: %.png
	$(PREFIX)-ld -r -b binary -o $@ $^

clean:
	@rm -rf $(TARGET).vpk $(TARGET).velf $(TARGET).elf $(OBJS) \
		eboot.bin param.sfo

vpksend: $(TARGET).vpk
	curl -T $(TARGET).vpk ftp://$(PSVITAIP):1337/ux0:/
	@echo "Sent."

send: eboot.bin
	curl -T eboot.bin ftp://$(IP):1337/ux0:/app/$(TITLE_ID)/
	@echo "Sent."
